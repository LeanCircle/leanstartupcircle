  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'compass-rails'
end

group :development do
  gem 'awesome_print' # Use 'ap' in the console to make output comprehensible
  gem 'heroku' # Allows heroku commands
  gem 'taps' # Allows pushing and pulling from heroku db.
