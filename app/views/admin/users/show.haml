- title @user.name + " | Lean Startup Circle"

#show_users
  %h1= @user.name
  %p
    Email
    = @user.email
  %p
    Zip Code
    = @user.zip_code
  %p
    Role
    = @user.role
  %p
    Phone
    = @user.phone

  = link_to edit_admin_user_path(@user), :class => 'btn' do
    %i.icon-pencil
    Edit
  = link_to admin_user_path(@user), :class => 'btn', :confirm => 'Are you sure?', :method => :delete do
    %i.icon-trash
    Destroy
  = link_to admin_user_imitate_path(@user), :class => 'btn', :confirm => 'Are you sure?' do
    %i.icon-user
    Imitate
  = link_to new_admin_user_path, :class => 'btn' do
    %i.icon-plus
    New
  = link_to admin_users_path, :class => 'btn-primary btn' do
    %i.icon-list.icon-white
    Index