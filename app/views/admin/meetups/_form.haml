= form_for [:admin, @meetup] do |f|
  -if @meetup.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meetup.errors.count, "error")} prohibited this meetup from being saved:"
      %ul
        - @meetup.errors.full_messages.each do |msg|
          %li= msg

  %br
  .field
    = f.label :name, 'Name'
    = f.text_field :name
  .field
    = f.label :meetup_id, 'Group ID'
    = f.number_field :meetup_id
  .field
    = f.label :description, 'Description'
    = f.text_area :description
  .field
    = f.label :organizer_id, 'Organizer ID'
    = f.number_field :organizer_id
  .field
    = f.label :meetup_link, 'Meetup Link'
    = f.url_field :meetup_link
  .field
    = f.label :facebook_link, 'Facebook Link'
    = f.url_field :facebook_link
  .field
    = f.label :twitter_link, 'Twitter Link'
    = f.url_field :twitter_link
  .field
    = f.label :linkedin_link, 'LinkedIn Link'
    = f.url_field :linkedin_link
  .field
    = f.label :googleplus_link, 'Google+ Link'
    = f.url_field :googleplus_link
  .field
    = f.label :other_link, 'Other Link'
    = f.url_field :other_link
  .field
    = f.label :city, 'City'
    = f.text_field :city
  .field
    = f.label :province, 'State / Province'
    = f.text_field :province
  .field
    = f.label :country, 'Country'
    = f.text_field :country
  .field
    = f.label :latitude, 'Latitude'
    = f.text_field :latitude
  .field
    = f.label :longitude, 'Longitude'
    = f.text_field :longitude
  .field
    = f.label :highres_photo_url, 'Highres photo URL'
    = f.url_field :highres_photo_url
  .field
    = f.label :photo_url, 'Photo URL'
    = f.url_field :photo_url
  .field
    = f.label :thumbnail_url, 'Thumbnail URL'
    = f.url_field :thumbnail_url
  .field
    = f.label :join_mode, 'Join Mode'
    = f.text_field :join_mode
  .field
    = f.label :visibility, 'Visibility'
    = f.text_field :visibility
  .field
    = f.label :lsc, 'Circle?'
    = f.label :lsc, 'False'
    = f.radio_button :lsc, false
    = f.label :lsc, 'True'
    = f.radio_button :lsc, true
  .field
    = f.label :approval, 'Approval'
    = f.label :approval, 'False'
    = f.radio_button :approval, false
    = f.label :approval, 'True'
    = f.radio_button :approval, true

  .actions
    = f.submit 'Submit'